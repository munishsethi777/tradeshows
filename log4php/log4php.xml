<?xml version="1.0" encoding="utf-8"?>
<log4php:configuration xmlns:log4php="http://logging.apache.org/log4php/">

  <!-- create Appender and then create corresponding logger -->
  <appender name="myConsoleAppender"
  class="LoggerAppenderConsole" />

  <appender name="myFileAppender" class="LoggerAppenderFile">
    <layout class="LoggerLayoutTTCC" />
    <param name="file" value="/Applications/MAMP/htdocs/tradeshows/logs/log.log" />
    <param name="maxFileSize" value="5MB" />
  </appender>
    <appender name="dataStoreFileAppender" class="LoggerAppenderFile">
    <layout class="LoggerLayoutTTCC" />
    <param name="file" value="/Applications/MAMP/htdocs/tradeshows/logs/BeanDataStorelog.log" />
    <param name="maxFileSize" value="5MB" />
  </appender>
  <logger name="logger">
    <appender_ref ref="myFileAppender" />
  </logger>
  <logger name="dataStoreLogger">
    <appender_ref ref="dataStoreFileAppender" />
  </logger>
  <root>
    <level value="DEBUG" />
    <appender_ref ref="myConsoleAppender" />
  </root>
</log4php:configuration>
